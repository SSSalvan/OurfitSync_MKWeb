{
  "version": 2,
  "buildCommand": "echo 'Frontend is static, no build needed'",
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "FIREBASE_SERVICE_ACCOUNT": "@firebase_service_account"
  },
  "public": "frontend"
}