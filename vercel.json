{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js" 
    },
        {
      "src": "/",
      "dest": "/backend/public/index.html"
    },
    {
        "src": "/(.*\\.(?:js|css|png|jpg|jpeg|gif|ico|svg|html|json))",
        "dest": "/backend/public/$1"
    }
  ]
}