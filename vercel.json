{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(css|js|ico|png|jpg|svg))$",
      "dest": "frontend/$1"
    },
    
    {
      "src": "/api/(.*)",
      "dest": "backend/api/$1" 
    },
    
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ]
}